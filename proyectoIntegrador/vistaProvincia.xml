<?xml version="1.0" encoding="UTF-8"?>
    <openerp>
            <record id="view_form_provincia" model="ir.ui.view">        
                <field name="name">Ficha de la Provincia</field>
                <field name="model">x_provincia.model</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <group name="group_top">
                                <group name="group_left">
                                    <field name="name"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>
            <record id="view_tree_provincia" model="ir.ui.view">        
                <field name="name">Lista de Provincias</field>
                <field name="model">x_provincia.model</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="name"/>
                    </tree>
                </field>
            </record>
    <data>   
             <act_window
                id="action_provincia"
                name="Provincias"
                res_model="x_provincia.model"
                view_mode="tree,kanban,form"
            />
    </data>
</openerp>